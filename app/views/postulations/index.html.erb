<p id="notice"><%= notice %></p>

<h1>Listing Postulations</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Lastname</th>
      <th>Phone</th>
      <th>Owner</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @postulations.each do |postulation| %>
      <tr>
        <td><%= postulation.name %></td>
        <td><%= postulation.email %></td>
        <td><%= postulation.lastName %></td>
        <td><%= postulation.phone %></td>
        <td><%= postulation.owner %></td>
        <td><%= link_to 'Show', postulation %></td>
        <td><%= link_to 'Edit', edit_postulation_path(postulation) %></td>
        <td><%= link_to 'Destroy', postulation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


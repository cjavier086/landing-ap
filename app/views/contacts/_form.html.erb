
<h2 class="separator">Contacto</h2> 
<%= form_for(@contact == nil ? (@contact = Contact.new ) : @contact) do |f| %>
  <% if @contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
      <% @contact.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
 
 <div class="cont-label">
   <h1>Escríbenos y con gusto nos contactaremos contigo en la brevedad.</h1>
 </div>

  <div class="form-group">
     <div class="col-lg-4">
       <%= f.text_field :name, :placeholder => "nombre", class: "form-control" %>
     </div>
     <div class="col-lg-4">
       <%= f.text_field :email, :placeholder => "correo", class: "form-control" %>
     </div>
     <div class="col-lg-4">
       <%= f.text_field :phone, :placeholder => "celular", class: "form-control" %>
     </div>
   </div>

  <div class="form-group">
    <div class="col-md-4 col-md-offset-4 edit-link">
      <%= submit_tag("Enviar", disable_with: "Guardando", class: "btn btn-default edit-button")%>
  </div>

  <div class="form-group col-md-4 col-md-offset-4 share">
    <h2>Síguenos en <%= link_to image_tag("fb.png", alt: "Compartir en Facebook"),
            'https://www.facebook.com/Movivan-427637314086247/?fref=ts' %> <%= link_to image_tag("youtube.png", alt: "Compartir en Youtube"),
            'https://www.youtube.com/channel/UCpfPdw3w9xLHahhlqNVrnbw?app=desktop' %></h2>
  </div>

<% end %>

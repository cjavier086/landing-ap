<script >
		function yscroll(){
			var pagetop = document.getElementById("land-head");
			
			var ypos = window.pageYOffset;
			if(ypos > screen.height - 200){
				pagetop.style.display = "inherit";
				
			}
			else{
				pagetop.style.display = "none";
			}
		}

		window.addEventListener("scroll", yscroll);
</script>

<script >
	$(document).ready(function() {
  	// Changing the defaults
	window.sr = ScrollReveal({ reset: true });

// Customizing a reveal set
	sr.reveal('.bar', { distance: '200px', useDelay: 'once', delay: 250 });
	var scroll_pos = 0;
    var animation_begin_pos = 0; //where you want the animation to begin
    var animation_end_pos = 5000; //where you want the animation to stop
    var factor=0;
    var tamDiv=$(window).height()+15;
    
    $(document).scroll(function() {
        scroll_pos = $(this).scrollTop(); 

        factor=tamDiv/screen.height;
        if(scroll_pos >= animation_begin_pos && scroll_pos <= animation_end_pos ) { 
            
            //we want to calculate the relevant transitional rgb value
            if(scroll_pos >= 0 && scroll_pos < 2*(tamDiv)){
            	document.getElementById('login').style.backgroundColor = "#d7006e";
            	document.getElementById('sign').style.backgroundColor = "#d7006e";
            	document.getElementById('cont').style.borderRight = "solid 1px #d7006e"
            	document.getElementById('whatlink').style.color = "#d7006e";
            	document.getElementById('howlink').style.color = '#777'
            	document.getElementById('benlink').style.color = '#777'; 
            	document.getElementById('contlink').style.color = '#777'
            }
            else if(scroll_pos >= 2*(tamDiv) && scroll_pos <6*(tamDiv)){
            	document.getElementById('login').style.backgroundColor = "#693b7b"; 
            	document.getElementById('sign').style.backgroundColor = "#693b7b"; 
            	document.getElementById('cont').style.borderRight = "solid 1px #693b7b"; 
            	document.getElementById('howlink').style.color = "#693b7b";
            	document.getElementById('whatlink').style.color = '#777'; 
            	document.getElementById('benlink').style.color = '#777'; 
            	document.getElementById('contlink').style.color = '#777';
            }

            else if(scroll_pos >= 6*(tamDiv) && scroll_pos < 7*(tamDiv)){
            	document.getElementById('login').style.backgroundColor = "#0074e6"; 
            	document.getElementById('sign').style.backgroundColor = "#0074e6"; 
            	document.getElementById('cont').style.borderRight = "solid 1px #0074e6";
            	document.getElementById('benlink').style.color = "#0074e6";
            	document.getElementById('whatlink').style.color = '#777'; 
